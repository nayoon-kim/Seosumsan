<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bgp.seosumsan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.bgp.seosumsan.activity.RegisterActivity"></activity>
        <activity android:name="com.bgp.seosumsan.activity.LoginActivity" />
        <activity
            android:name="com.bgp.seosumsan.activity.WalkActivity"
            android:launchMode="singleTop" />
        <activity android:name="com.bgp.seosumsan.activity.InfoActivity" />
        <activity android:name="com.bgp.seosumsan.activity.SelectActivity" />
        <activity
            android:name="com.bgp.seosumsan.activity.PopupActivity"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bgp.seosumsan.activity.MyPageActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.bgp.seosumsan.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bgp.seosumsan.activity.MainActivity"
            android:launchMode="singleTop" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>